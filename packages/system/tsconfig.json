{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2022",
    "lib": [ "es2022" ],
    "module": "CommonJS",
    "incremental": true,
    "noEmit": false,
    "outDir": "./build",
    "rootDir": "./src",
    "tsBuildInfoFile": ".tsbuildinfo",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "exclude": ["**/node_modules", "**/.*/", "build"],
  "include": ["**/*.js", "**/*.ts", "**/*.tsx"]
}
